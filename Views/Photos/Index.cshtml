@model IEnumerable<PhotoManager.Models.Photo>
@{
        ViewBag.Title = "Index";
}
<div class="container py-4">
    <div class="row">
        @foreach (var photo in Model)
                {
        <div class="col-12 col-sm-6 col-md-6 mb-4">
            <div class="h-100 text-primary">
                <div class="card-body">
                    <h5 class="card-title">@photo.Title</h5>
                    <a href="/Photos/details"><img class="img-fluid rounded mb-3" src="~/App_Assets/Photos/@photo.Path" alt="Autumn Tree" /></a>
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="/Photos/details" class="text-decoration-none">
                            <div class="text-primary small">
                                @photo.Date
                            </div>
                        </a>
                        <div class="d-flex align-items-center">
                            <a href="/Photos/details" class="text-decoration-none"><span class="me-2 text-primary text">3</span></a>
                            <a href="#" class="text-decoration-none text-primary fs-5">
                                <i class="fa-regular fa-thumbs-up"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
                }
    </div>
</div>
